{
  "name": "playwright-framework",
  "version": "1.0.0",
  "description": "A Playwright test automation framework with TypeScript",
  "scripts": {
    "test": "playwright test --reporter=html && npx playwright show-report",
    "test:headful": "playwright test --headed --reporter=html && npx playwright show-report"
  },
  "baseUrl": "https://test.alpidi.com/",
  "devDependencies": {
    "@playwright/test": "^1.41.2",
    "@types/node": "^20.11.10",
    "eslint": "^7.0.0",
    "prettier": "^2.0.0",
    "typescript": "^4.0.0"
  },
  "dependencies": {
    "dotenv": "^16.4.1",
    "playwright": "^1.41.2"
  }
}
